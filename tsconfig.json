{
    "compilerOptions": {
        // "module": "ESNext",
        "module": "es2022",
        "moduleResolution": "bundler",
        // "target": "ES2022",
        "target": "es2024",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": false,
        "noEmit": true,
        /* Linting */
        "skipLibCheck": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true,
    }
}