{
  "compilerOptions": {
    // "module": "ESNext",
    "module": "CommonJS",
    // "moduleResolution": "Bundler",
    // "target": "ES2022",
    "target": "es2016",
    // "jsx": "react",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "sourceMap": true,

    "outDir": "./build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "src", // Include all files in the src folder
    "tests" // Explicitly include the tests folder
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}