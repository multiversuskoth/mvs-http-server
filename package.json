{
  "name": "@mvsi/root",
  "dependencies": {
    "@biomejs/biome": "^2.3.9",
    "dotenv": "^17.2.3",
    "papr": "^16.0.0"
  },
  "patchedDependencies": {
    "@doctormckay/steam-crypto@1.2.0": "patches/@doctormckay%2Fsteam-crypto@1.2.0.patch"
  },
  "private": true,
  "scripts": {
    "start": "bun apps/mvsi-server/src/index.elysia.ts",
    "build-container": "docker build -t mvsi-http .",
    "tag": "docker tag mvsi-http:latest ord.ocir.io/axtmj7ldnntc/mvsi-server:latest",
    "push-build": "docker push ord.ocir.io/axtmj7ldnntc/mvsi-server:latest",
    "build": "bun build ./apps/mvsi-server/src/entry.ts --compile --production --target=bun-linux-x64-modern --outfile out/mvsi --minify-syntax",
    "build-win": "bun build ./apps/mvsi-server/src/entry.ts --compile --production --target bun --outfile out/mvsi --minify-syntax",
    "watch": "bun --watch apps/mvsi-server/src/index.elysia.ts",
    "websocket": "bun apps/mvsi-server/src/websocketStart.ts",
    "web": "bun run --filter '@mvsi/web' dev",
    "web:build": "bun run --filter '@mvsi/web' build"
  },
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
